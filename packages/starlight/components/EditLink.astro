---
import Icon from '../user-components/Icon.astro';
import type { Props } from '../props';

let { editUrl, labels } = Astro.props;
if (editUrl?.pathname.includes('/reference/')) {
	if (editUrl.pathname.includes('/reference/index')) {
		editUrl = undefined;
	} else {
		editUrl = new URL(
			editUrl.pathname.replace('/src/content/docs/reference/', '/'),
			editUrl.origin
		);
	}
} else {
	editUrl = undefined;
}
---

{
	editUrl && (
		<a href={editUrl} class="sl-flex">
			<Icon name="pencil" />
			{labels['page.editLink']}
		</a>
	)
}

<style>
	a {
		gap: 0.5rem;
		align-items: center;
		text-decoration: none;
		color: var(--sl-color-gray-3);
		margin-left: 1em;
	}
	a:hover {
		color: var(--sl-color-white);
	}
</style>
